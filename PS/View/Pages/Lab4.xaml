<UserControl x:Class="PS.View.Pages.Lab4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:converters="clr-namespace:PS.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <converters:IconConverter x:Key="IconConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock HorizontalAlignment="Center">Lab4 - FTP</TextBlock>
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Status: "/>
                <TextBlock Text="{Binding ConnectionStatusDescription}" Foreground="{Binding ConnectionStatusColor}"/>
            </StackPanel>

            <TextBox Text="{Binding ActualDir}" IsReadOnly="True"/>
            
            <StackPanel Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
                <Button Content="Połącz" Command="{Binding ConnectCommand}" Width="100"/>
                <Button Content="Rozłącz" Command="{Binding DisconnectCommand}" Width="100"/>

                <Button Content="Cofnij" Command="{Binding CdupCommand}" Width="100"/>
                <Button Content="Otwórz" Command="{Binding CwdCommand}" Width="120"/>

                <Button Content="Generuj drzewo" Command="{Binding ListAllCommand}" Width="100"/>
            </StackPanel>
        </StackPanel>

        <TreeView Grid.Row="1" ItemsSource="{Binding Structure}" SelectedItemChanged="TreeView_OnSelectedItemChanged" MaxHeight="470">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding Type, Converter={StaticResource IconConverter}}"
                           Width="16"
                           Height="16"
                           SnapsToDevicePixels="True"/>
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</UserControl>
